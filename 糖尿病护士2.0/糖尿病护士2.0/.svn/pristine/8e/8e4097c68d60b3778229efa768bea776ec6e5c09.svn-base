#import "ChangePasswordViewController.h"
#import "AFNetworking.h"
#import "AFHTTPRequestOperationManager.h"
@interface ChangePasswordViewController ()<UITextFieldDelegate>
@property (weak, nonatomic) IBOutlet UITextField *oldPasswordTF;
@property (weak, nonatomic) IBOutlet UITextField *nPasswordTF;
@property (weak, nonatomic) IBOutlet UITextField *sureNPasswordTF;

@property (weak, nonatomic) IBOutlet UIButton *saveBtn;

@end

@implementation ChangePasswordViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    self.oldPasswordTF.delegate = self;
    self.nPasswordTF.delegate = self;
    self.sureNPasswordTF.delegate = self;
    self.oldPasswordTF.secureTextEntry = YES;
    self.nPasswordTF.secureTextEntry = YES;
    self.sureNPasswordTF.secureTextEntry = YES;
}
- (IBAction)saveAction:(id)sender {
    if ([_oldPasswordTF.text isEqualToString:@""] || [_nPasswordTF.text isEqualToString:@""]||[_sureNPasswordTF.text isEqualToString:@""]) {

        [FVCustomAlertView showDefaultWarningAlertOnView:self.view withTitle:@"请填写旧密码和新密码"];
    } else  if ([_nPasswordTF.text isEqualToString:_sureNPasswordTF.text] == NO){

        [FVCustomAlertView showDefaultWarningAlertOnView:self.view withTitle:@"俩次输入的密码不一致"];
        
    } else{
        [self oldPasswordRequest];
    }

}
- (void)oldPasswordRequest{
    AFHTTPRequestOperationManager *manager = [AFHTTPRequestOperationManager manager];
    manager.responseSerializer.acceptableContentTypes = [NSSet setWithObject:@"text/html"];

    NSDictionary * dictionary = @{@"oldpwd":self.oldPasswordTF.text};
    [manager POST:@"http://test.tanghushi.com/api/mobile/?version=2&module=updatepassword&op=checkoldpwd" parameters:dictionary success:^(AFHTTPRequestOperation *operation, id responseObject) {
        id value = [[responseObject objectForKey:@"Variables"] objectForKey:@"value"];
        NSNumberFormatter* numberFormatter = [[NSNumberFormatter alloc] init];
        NSString * str = [numberFormatter stringFromNumber:value];
        if ([str isEqualToString:@"1"]) {
            NSLog(@"旧密码验证正确");
            [self changePasswordRequest];
        }else{
            NSLog(@"旧密码验证错误");
            [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"您输入的旧密码不正确"];
        }
        
    } failure:^(AFHTTPRequestOperation *operation, NSError *error) {
        NSLog(@"验证失败！%@",error);
        [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"对不起，修改资料失败，请重试"];
    }];
}
- (void)changePasswordRequest{
    AFHTTPRequestOperationManager *manager = [AFHTTPRequestOperationManager manager];
    manager.responseSerializer.acceptableContentTypes = [NSSet setWithObject:@"text/html"];
    NSDictionary * dictionary = @{@"password":self.nPasswordTF.text,@"oldpassword":self.oldPasswordTF.text};
    [manager POST:@"http://test.tanghushi.com/api/mobile/?version=2&module=updatepassword&op=updatepwd" parameters:dictionary success:^(AFHTTPRequestOperation *operation, id responseObject) {
        id value = [[responseObject objectForKey:@"Variables"] objectForKey:@"value"];
        NSNumberFormatter* numberFormatter = [[NSNumberFormatter alloc] init];
        NSString * str = [numberFormatter stringFromNumber:value];
        if ([str isEqualToString:@"1"]) {
            NSLog(@"修改成功");
            [FVCustomAlertView showDefaultDoneAlertOnView:self.view withTitle:@"密码修改成功！"];
        }else{
            [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"密码修改失败! "];
            NSLog(@"修改失败");
        }
    } failure:^(AFHTTPRequestOperation *operation, NSError *error) {
        NSLog(@"验证失败！%@",error);
        [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"对不起，修改资料失败，请重试"];
    }];

}
-(BOOL)textFieldShouldReturn:(UITextField *)textField{
    [textField resignFirstResponder];
    return YES;
}
- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

