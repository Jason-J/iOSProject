#import "MyContactsViewController.h"
#import "MyContactsCell.h"
#import "addContactsController.h"
@interface MyContactsViewController ()<UITableViewDataSource,UITableViewDelegate>{
    NSMutableArray * contactArray;
    UIButton *editBtn;
    NSString * deleFid;
}
@property (strong, nonatomic)  UIButton *addContactBtn;
@property (nonatomic,strong)UITableView * tableView;
@end

@implementation MyContactsViewController
- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    contactArray = [[NSMutableArray alloc] init];
    self.tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, 64, SCREEN_WIDTH, SCREEN_HEIGHT-64) style:UITableViewStyleGrouped];
    [self.view addSubview:self.tableView];
    self.tableView.delegate = self;
    self.tableView.dataSource = self;
    self.addContactBtn = [UIButton buttonWithType:UIButtonTypeCustom];
    [self.addContactBtn setFrame:CGRectMake(0, 0, 200, 40)];
    self.addContactBtn.backgroundColor = [UIColor cyanColor];
    [self.addContactBtn setTitle:@"添加联系人" forState:UIControlStateNormal];
    [self.addContactBtn addTarget:self action:@selector(addContactAction:) forControlEvents:UIControlEventTouchUpInside];
    [self.addContactBtn setTitleColor:[UIColor blackColor] forState:UIControlStateNormal];
    self.tableView.tableFooterView = self.addContactBtn;
//    self.tableView.separatorColor=[UIColor redColor];
    //编辑
    UIBarButtonItem *deleteButton = [[UIBarButtonItem alloc]initWithTitle:@"编辑" style:UIBarButtonItemStyleBordered target:self action:@selector(editAction:)];
    self.navigationItem.rightBarButtonItem = deleteButton;
    
    [self getContactRequest];
}

#pragma mark - 编辑联系人
- (void)editAction:(id)sender{
    [self.tableView setEditing:!self.tableView.editing animated:YES];
    
    if (self.tableView.editing)
    {
        [self.navigationItem.rightBarButtonItem setTitle:@"删除"];
    }
    else
    {
        [self.navigationItem.rightBarButtonItem setTitle:@"完成"];
    }
}


//- (BOOL)tableView:(UITableView *)tableView canMoveRowAtIndexPath:(NSIndexPath *)indexPath
//{
//
//    return YES;
//}
-(void)tableView:(UITableView *)tableView commitEditingStyle:(UITableViewCellEditingStyle)editingStyle forRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (editingStyle == UITableViewCellEditingStyleDelete)
    {
        NSUInteger row = [indexPath row];
        deleFid = [[contactArray objectAtIndex:row] objectForKey:@"fid"];
        [self deleteRequest];
        
        [contactArray removeObjectAtIndex:indexPath.row];
        [tableView deleteRowsAtIndexPaths:@[indexPath] withRowAnimation:UITableViewRowAnimationRight];  //删除对应数据的cell
    }
}
#pragma mark - request
- (void)getContactRequest{
    JSNetWorking * js = [[JSNetWorking alloc] init];
    [js getRequestWithURLStr:@"http://test.tanghushi.com/api/mobile/?version=2&module=clock&op=list" success:^(id ResultData) {
        if ([[ResultData objectForKey:@"Variables"] objectForKey:@"value"]) {
            [contactArray addObjectsFromArray:[[ResultData objectForKey:@"Variables"] objectForKey:@"value"]];
            [_tableView reloadData];
            NSLog(@"value = %@ , %s",contactArray,__func__);
            
        }
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"error = %@",error);
    }];
}

- (void)deleteRequest{
    JSNetWorking * js = [[JSNetWorking alloc] init];
    NSString * url = [NSString stringWithFormat:@"http://test.tanghushi.com/api/mobile/?version=2&module=clock&op=delmember&fid=%@",deleFid];
    [js getRequestWithURLStr:url success:^(id ResultData) {
        id value = [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        NSLog(@"value = = = = = %@",value);
//        [self.tableView reloadData];
        
        
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"删除失败 %@",error);
    }];
}
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    return contactArray.count;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    static NSString * ce = @"MyContacts";
    MyContactsCell * cell = (MyContactsCell *)[tableView dequeueReusableCellWithIdentifier:ce];
    if (!cell) {
        cell = [[[NSBundle mainBundle] loadNibNamed:@"MyContactsCell" owner:self options:nil]lastObject];
    }
    cell.nameLab.text = [[contactArray objectAtIndex:indexPath.row] objectForKey:@"fname"];
    cell.contactLab.text = [[contactArray objectAtIndex:indexPath.row] objectForKey:@"relationship"];
    cell.mobileLab.text = [[contactArray objectAtIndex:indexPath.row] objectForKey:@"mobile"];
    return cell;
}

- (void)addContactAction:(id)sender{
    UIStoryboard * addSB = [UIStoryboard storyboardWithName:@"Mine" bundle:nil];
    addContactsController * addVC = (addContactsController *)[addSB instantiateViewControllerWithIdentifier:@"addContact"];
    [addVC addSuccess:^(BOOL returnSuccess) {
        NSLog(@"%d,%s",returnSuccess,__func__);
        [self getContactRequest];
    }];
    [self.navigationController pushViewController:addVC animated:YES];
}
- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}
