#import "FamilyController.h"
#import "LTableViewCell.h"
@interface FamilyController ()<UITableViewDataSource,UITableViewDelegate>{
    NSArray * array ;
    NSMutableArray *contacts;
    NSMutableArray * selectArray;
}
@property (nonatomic,strong)UITableView *tableView;
@end

@implementation FamilyController

- (void)viewDidLoad {
    [super viewDidLoad];
      contacts = [NSMutableArray array];
    selectArray = [NSMutableArray array];
    // Do any additional setup after loading the view.
    _tableView = [[UITableView alloc] initWithFrame:self.view.bounds style:UITableViewStylePlain];
    _tableView.delegate = self;
    _tableView.dataSource = self;
    [self.view addSubview:_tableView];
    
    self.navigationItem.leftBarButtonItem = [[UIBarButtonItem alloc] initWithTitle:@"< 确认" style:UIBarButtonItemStylePlain target:self action:@selector(goToBack)];
    array = @[@"上俩代",@"下一代",@"上一代",@"下俩代",@"同代"];
    for (int i = 0; i <5; i++) {
        NSMutableDictionary *dic = [NSMutableDictionary dictionary];
        [dic setValue:@"NO" forKey:@"checked"];
        [contacts addObject:dic];
    }

}
#pragma  mark- 返回上个界面
-(void)goToBack
{
    if (self.block) {
        self.block(selectArray);
    }
    [self.navigationController popViewControllerAnimated:YES];
}
-(void)valueOfFamily:(RETRUNFAMILYBLOCK)block{
    self.block = block;
}
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    return array.count;
}
#pragma mark - UITableView delegate
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    static NSString *str = @"reuse";
    LTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:str];
    if (!cell) {
        cell = [[LTableViewCell alloc] initWithStyle:UITableViewCellStyleDefault reuseIdentifier:str];
    }
    cell.lable.text=[array objectAtIndex:indexPath.row];
    return cell;
}
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath{
    [tableView deselectRowAtIndexPath:indexPath animated:YES];
    
    LTableViewCell *cell = (LTableViewCell*)[tableView cellForRowAtIndexPath:indexPath];
    NSUInteger row = [indexPath row];
    NSMutableDictionary *dic = [contacts objectAtIndex:row];
    if ([[dic objectForKey:@"checked"] isEqualToString:@"NO"]) {
        [dic setObject:@"YES" forKey:@"checked"];
        [cell setChecked:YES];
        [selectArray addObject:cell.lable.text];
    }else {
        [dic setObject:@"NO" forKey:@"checked"];
//        [selectArray removeObjectsAtIndexes:[contacts objectAtIndex:row]]
        [selectArray removeObject:cell.lable.text];
        [cell setChecked:NO];
    }
}
- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

