@implementation MedicalRecordListViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    [[UIApplication sharedApplication] setStatusBarStyle:UIStatusBarStyleLightContent];

    // get medical record list here
//    /api/mobile/?version=2&module=case&op=caseimglist
    [SVProgressHUD show];
    NSString *urlString = [CommonSettings baseUrlWithVersion:2 module:@"case" parameters:@{@"op": @"caseimglist"}];
    AFHTTPRequestOperationManager *manager = [AFHTTPRequestOperationManager manager];
    [manager GET:urlString parameters:nil
         success:^(AFHTTPRequestOperation *httpRequestOperation, id responseObject){
             [SVProgressHUD showSuccessWithStatus:@""];
             NSLog(@"%@", responseObject);
         }
         failure:^(AFHTTPRequestOperation *httpRequestOperation, NSError *error){
             [SVProgressHUD showErrorWithStatus:@""];
             NSLog(@"%@", error);
         }];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

#pragma mark - Action & private methods

- (IBAction)recordAddedAction:(UIStoryboardSegue *)sender {
    NSString *urlString = [CommonSettings baseUrlWithVersion:2 module:@"case" parameters:@{@"op": @"addcaseimg"}];
    
    NSLog(@"request url: %@", urlString);
    
    [SVProgressHUD show];
    JSNetWorking *httpRequest = [[JSNetWorking alloc] init];
    [httpRequest postImagesRequestWithURLStr:urlString imagesArray:self.selectedImages imageKey:@"medical_record" paramters:nil
                                     success:^(id responseData){
                                         NSLog(@"done");
                                         [SVProgressHUD showSuccessWithStatus:@"完成"];
    } failure:^(NSError *error, AFHTTPRequestOperation *requestOperation){
        NSLog(@"error");
        [SVProgressHUD showErrorWithStatus:@"重试"];
    }];
}

