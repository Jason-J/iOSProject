-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (indexPath.section==0) {
        static NSString * ce = @"Clinic";
        ClinicCell * cell = (ClinicCell *)[tableView dequeueReusableCellWithIdentifier:ce];
        if (!cell) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"ClinicCell" owner:self options:nil]lastObject];
        }
        if (indexPath.row==1) {
//            NSString * isopen = [[self.clinicdDictionary objectForKey:@"binding"] objectForKey:@"isopen"];
//            if ([isopen isEqualToString:@"1"]) {
//                cell.countLab.text = [[self.clinicdDictionary objectForKey:@"binding"] objectForKey:@"count"];
//                cell.moneyLab.text = [[self.clinicdDictionary objectForKey:@"binding"] objectForKey:@"money】"];
//            } else{
//                cell.hidden = YES;
////                [_tableView reloadData];
//            }
        } else if (indexPath.row==0){
            NSString * isopen2 = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"isopen"];
            cell.countLab.text = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"count"];
            cell.moneyLab.text = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"money"];
            cell.starLab.text = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"star"];
            if ([isopen2 isEqualToString:@"1"]) {
                [cell.image setImage:[UIImage imageNamed:@"home_photo_advisory"]];
            } else{
                 [cell.image setImage:[UIImage imageNamed:@"home_photo_advisory-_gray"]];
//                cell.hidden = YES;
//                [_tableView reloadData];
            }
        }

        return cell;
    } else{
        static NSString * ce = @"Evaluation";
        EvaluationCell * cell = (EvaluationCell *)[tableView dequeueReusableCellWithIdentifier:ce];
        if (!cell) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"EvaluationCell" owner:self options:nil]lastObject];
        }
        //星星评级
        self.starRateView = [[CWStarRateView alloc] initWithFrame:CGRectMake(23, 40, 109, 30) numberOfStars:5];
        self.starRateView.scorePercent = [[[self.comArray objectAtIndex:indexPath.row] objectForKey:@"star"] floatValue]*0.2;
        self.starRateView.allowIncompleteStar = YES;
        self.starRateView.hasAnimation = YES;
        self.starRateView.userInteractionEnabled = NO;
        [cell.contentView addSubview:self.starRateView];
        cell.nameLab.text = [[self.comArray objectAtIndex:indexPath.row] objectForKey:@"fromusername"];
        cell.dateLab.text = [[self.comArray objectAtIndex:indexPath.row] objectForKey:@"addtime"];
        cell.commentLab.text = [[self.comArray objectAtIndex:indexPath.row] objectForKey:@"comment"];
        return cell;
    }
    
}
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath{
     [tableView deselectRowAtIndexPath:indexPath animated:YES];
    if (indexPath.section==0) {
        PayViewController * payVC = [[PayViewController alloc] init];
        payVC.name = self.doctor.realname;
        payVC.consult = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"money"];
        payVC.uid = self.doctor.uid;
        payVC.consult_money = [[self.clinicdDictionary objectForKey:@"consult"] objectForKey:@"money_int"];
        payVC.balance = [self.clinicdDictionary objectForKey:@"balance"];
        [self.navigationController pushViewController:payVC animated:YES];
    }
}
