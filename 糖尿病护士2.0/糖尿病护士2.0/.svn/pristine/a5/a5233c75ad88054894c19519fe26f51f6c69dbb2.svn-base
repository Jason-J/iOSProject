@implementation MyDoctorDetailViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view from its nib.
    self.title = @"医生详情";
    self.clinicdDictionary = [[NSMutableDictionary alloc] init];
    self.comArray = [[NSMutableArray alloc] init];
    _tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, 64, SCREEN_WIDTH, SCREEN_HEIGHT-64) style:UITableViewStylePlain];
    [self.view addSubview:_tableView];
    _tableView.rowHeight = 100;
    _tableView.tableHeaderView = [[[NSBundle mainBundle] loadNibNamed:@"MyDoctorHeaderView" owner:self options:nil] lastObject];
    self.tableView.backgroundColor = [UIColor colorWithRed:236.0/255 green:246.0/255 blue:246.0/255 alpha:1];
    
    
    dispatch_async(dispatch_get_global_queue(DISPATCH_QUEUE_PRIORITY_DEFAULT, 0), ^{
        [self getDoctorMessageRequest];
        [self clinicServiceRequest];
        [self commentRequest];
        dispatch_async(dispatch_get_main_queue(), ^{
        });
    });
}
-(void)viewDidAppear:(BOOL)animated{
    [super viewDidAppear:animated];
}

#pragma mark - 绑定
- (void)bundingAction:(id)sender{
    [[KGModal sharedInstance] showWithContentView:[[[NSBundle mainBundle] loadNibNamed:@"Provision" owner:self options:nil] objectAtIndex:0]andAnimated:YES];
}
#pragma mark - 医生信息
- (void)getDoctorMessageRequest{
    JSNetWorking * request = [[JSNetWorking alloc] init];
    NSString * string = [CommonSettings baseUrlWithVersion:2 module:@"expert" parameters:@{@"op":@"show",@"id":self.uid}];
    [FVCustomAlertView showDefaultLoadingAlertOnView:self.view withTitle:@"请等待"];
    [request getRequestWithURLStr:string success:^(id ResultData) {
        id value = [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        NSLog(@"value====-------=-=%@",value);
     _doctor = [[Doctor alloc] init];
        [_doctor setValuesForKeysWithDictionary:value];
        MyDoctorHeaderView * HeaderView = [[[NSBundle mainBundle] loadNibNamed:@"MyDoctorHeaderView" owner:self options:nil] lastObject];
        [HeaderView.certifyBtn addTarget:self action:@selector(certifyActin:) forControlEvents:UIControlEventTouchUpInside];
        [HeaderView.askBtn addTarget:self action:@selector(askAction:) forControlEvents:UIControlEventTouchUpInside];
        [HeaderView.myHeaderImageView sd_setImageWithURL:[NSURL URLWithString:_doctor.headimg] placeholderImage:nil];
        HeaderView.doctorNameLabe.text = _doctor.realname;
        HeaderView.hospitalLabel.text = _doctor.hospital;
        HeaderView.titleLabel.text = _doctor.title;
        HeaderView.payLabel.text = _doctor.binding_money;
        HeaderView.serveLabel.text = _doctor.towards;
        HeaderView.judgeLabel.text = _doctor.totalcomment;
        HeaderView.indroduceTextView.text = _doctor.speciality;
        
        _tableView.tableHeaderView = HeaderView;

        [self.tableView reloadData];
        [FVCustomAlertView hideAlertFromView:self.view fading:YES];
        if ([_doctor.relation intValue]==1) {
            HeaderView.relation.text = @"已绑定";
//            bundingBtn.hidden = YES;
        } else if ([_doctor.relation intValue]==0){
              HeaderView.relation.text = @"正在申请中";
//            bundingBtn.hidden = YES;
        }else if ([_doctor.relation intValue]==2){
            HeaderView.relation.text = @"已拒绝";
//             bundingBtn.hidden = YES;
        } else{
            HeaderView.relation.text = @"绑定医生";
            UIButton * bundingBtn = [UIButton buttonWithType:UIButtonTypeCustom];
            bundingBtn.frame = CGRectMake(8.00, 113.00, 304.00, 39.00);
            [bundingBtn addTarget:self action:@selector(bundingAction:) forControlEvents:UIControlEventTouchUpInside];
            bundingBtn.backgroundColor = [UIColor clearColor];
            [_tableView.tableHeaderView addSubview:bundingBtn];
        }
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"请求失败,%@",error);
        [FVCustomAlertView hideAlertFromView:self.view fading:YES];
        [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"错误"];
    }];
}
#pragma mark -糖护士认证
- (void)certifyActin:(id)sender{
    NSLog(@"糖护士认证%s",__FUNCTION__);
    CertifyViewController * certifyVC = [[CertifyViewController alloc] init];
    certifyVC.doctor = self.doctor;
    [self.navigationController pushViewController:certifyVC animated:YES];
}
#pragma mark - 询问医生
- (void)askAction:(id)sender{
    UIStoryboard *myQuestionSB = [UIStoryboard storyboardWithName:@"MyQuestion" bundle:nil];
    MyQuestionViewController * myQuestionVC = (MyQuestionViewController *)[myQuestionSB instantiateViewControllerWithIdentifier:@"MyQuestion"];
    myQuestionVC.isDoctor =YES;
    myQuestionVC.doctor = self.doctor;
    [self.navigationController pushViewController:myQuestionVC animated:YES];
}
#pragma mark - 诊所服务
- (void)clinicServiceRequest{
    JSNetWorking * request = [[JSNetWorking alloc] init];
    NSString * url = [NSString stringWithFormat:@"http://test.tanghushi.com/api/mobile/?version=2&module=expert&op=clinicService&uid=%@",self.uid];
    [request getRequestWithURLStr:url success:^(id ResultData) {
       self.clinicdDictionary= [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        _tableView.delegate = self;
        _tableView.dataSource = self;
        
        [self.tableView reloadData];
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"请求失败,%@",error);
        [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"错误"];
    }];
}
#pragma mark -评价
- (void)commentRequest{
    JSNetWorking * request = [[JSNetWorking alloc] init];
    NSString * url = [NSString stringWithFormat:@"http://www.tanghushi.com/api/mobile/?version=2&module=comment&op=getcomments&uid=%@",self.uid];
    [request getRequestWithURLStr:url success:^(id ResultData) {
        id value = [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        [self.comArray removeAllObjects];
        if (value) {
            
            [self.comArray addObjectsFromArray:value];
        }
        NSLog(@"value=====%@",value);
         [self.tableView reloadData];
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"error== %@",error);
        [FVCustomAlertView showDefaultErrorAlertOnView:self.view withTitle:@"错误"];
    }];
}
