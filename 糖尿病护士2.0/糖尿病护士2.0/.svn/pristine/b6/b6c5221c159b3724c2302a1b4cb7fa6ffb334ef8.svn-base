#import "AnswerViewController.h"

@interface AnswerViewController ()<UITextViewDelegate>

@property (weak, nonatomic) IBOutlet UIButton *sendBtn;
@property (strong,nonatomic)UITextView * textView;
@property (nonatomic, retain) UILabel *label;
@property (nonatomic, retain) UILabel *countLabel;
@property (nonatomic, assign) NSInteger count;

@end

@implementation AnswerViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    self.textView = [[UITextView alloc] initWithFrame:CGRectMake(0, 104, 320, 150)];
    UIImageView *textViewBackground = [[UIImageView alloc] initWithFrame:self.textView.bounds];
    textViewBackground.image = [UIImage imageNamed:@"bj_02.png"];
    [self.view addSubview:textViewBackground];
    textViewBackground.userInteractionEnabled = YES;
    
    [self.view addSubview:self.textView];
    
    
    self.textView.delegate = self;
    self.textView.textAlignment = NSTextAlignmentNatural;
    _label = [[UILabel alloc] initWithFrame:CGRectMake(10, 10, 300, 40)];
    [self.textView  addSubview:_label];
    
    _label.text = @"欢迎您提出使用糖医生客户端的感受和建议，期待您的声音。";
    _label.font = [UIFont systemFontOfSize:12];
    _label.numberOfLines = 2;
    [_label sizeToFit];
    _label.alpha = 0.5;
    
    self.countLabel = [[UILabel alloc] initWithFrame:CGRectMake(200, 110, 130, 40)];
    [_textView addSubview:_countLabel];
    
    _countLabel.font = [UIFont systemFontOfSize:14];
    _countLabel.text = [NSString stringWithFormat:@"还可以输入%ld字", (long)self.count];
}
- (IBAction)sendAction:(id)sender {
    JSNetWorking * js = [[JSNetWorking alloc] init];
    [js postRequestWithURLStr:@"http://www.tanghushi.com/api/mobile/?version=2&module=feedback&op=add" paramters:@{@"content":self.textView.text,@"version":@"2.0",@"typeid":@"3"} success:^(id ResultData) {
        id value = [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        if ([value isEqualToNumber:[NSNumber numberWithInt:1]]) {
            NSLog(@"成功 value= %@",value);
        }
   } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
       NSLog(@"error = %@",error);
   }];
}
- (void)alertView:(UIAlertView *)alertView clickedButtonAtIndex:(NSInteger)buttonIndex
{
    if (buttonIndex == 0) {
        _textView.text = @"";
        [_textView resignFirstResponder];
        _label.hidden = NO;
        _count = 200;
        _countLabel.text = [NSString stringWithFormat:@"还可以输入%ld字", (long)self.count];
    }
}
-(void)textViewDidChange:(UITextView *)textView
{
    NSLog(@"%lu", (unsigned long)textView.text.length);
    _count = 200 - textView.text.length;
    _countLabel.text = [NSString stringWithFormat:@"还可以输入%ld字", (long)self.count];
    
}
-(BOOL)textView:(UITextView *)textView shouldChangeTextInRange:(NSRange)range replacementText:(NSString *)text
{
    if (range.location >=200) {
        return NO;
    } else {
        return YES;
    }
}

-(void)textViewDidBeginEditing:(UITextView *)textView
{
    _label.hidden = YES;
    UIBarButtonItem *done = [[UIBarButtonItem alloc] initWithBarButtonSystemItem:UIBarButtonSystemItemDone target:self action:@selector(leaveEditMode)];
    
    self.navigationItem.rightBarButtonItem = done;
    
}

-(BOOL)textField:(UITextField *)textField shouldChangeCharactersInRange:(NSRange)range replacementString:(NSString *)string {
    NSString *temp = [textField.text stringByReplacingCharactersInRange:range withString:string];
    if (temp.length > 15) {
        textField.text = [temp substringToIndex:15];
        return NO;
    }
    return YES;
}



- (void)textViewDidEndEditing:(UITextView *)textView {
    
    self.navigationItem.rightBarButtonItem = nil;
    
}

- (void)leaveEditMode {
    
    [self.textView resignFirstResponder];
    
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

