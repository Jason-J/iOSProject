- (void)showThePictureWithIndexPath:(NSIndexPath *)indexPath
{
    [[_tableView cellForRowAtIndexPath:indexPath].imageView setImage:[UIImage imageNamed:@"xuanze.png"]];
    
}
- (void)hiddenThePictureWithIndexPath:(NSIndexPath *)indexPath
{
    [[_tableView cellForRowAtIndexPath:indexPath].imageView setImage:[UIImage imageNamed:@"xuanze-huise"]];
}

