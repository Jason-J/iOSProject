#import "CellForMyHistoryQuestion.h"

@implementation CellForMyHistoryQuestion

- (void)awakeFromNib {
    // Initialization code
}
-(void)setQuestion:(Question *)question
{
    if (_question != question) {
        _question = question;
        if ([_question.status isEqualToString:@"1"]) {
            _stateLabel.text = @"待回复";
            _myImageView.backgroundColor = [UIColor redColor];
            _titleView.layer.borderColor = [[UIColor redColor] CGColor];
            _titleView.layer.borderWidth = 1;
            _titleLabel.textColor = [UIColor redColor];
            _freeLabel.textColor = [UIColor redColor];
        }
        _dateLabel.text = _question.addtime;
        _detailLabel.text = _question.content;
    }
}
- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

@end
