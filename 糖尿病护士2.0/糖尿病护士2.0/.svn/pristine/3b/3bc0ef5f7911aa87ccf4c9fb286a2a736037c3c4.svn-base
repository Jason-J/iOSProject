#import "HistoryPlanDetailViewController.h"

#import "MyPlanView.h"
@interface HistoryPlanDetailViewController ()<MyPlanViewDelegate>
@property (nonatomic, strong) MyPlanView *headerView;
@property (nonatomic, copy) NSString *projectId;
@property (nonatomic, strong) NSDictionary *dic;

@end

@implementation HistoryPlanDetailViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    // Uncomment the following line to preserve selection between presentations.
    // self.clearsSelectionOnViewWillAppear = NO;
    
    // Uncomment the following line to display an Edit button in the navigation bar for this view controller.
    self.navigationItem.rightBarButtonItem = [[UIBarButtonItem alloc] initWithTitle:@"导入" style:UIBarButtonItemStyleDone target:self action:@selector(leadingProject)];
    [self getDataFromServer];
}
#pragma  mark- 获取数据
-(void)getDataFromServer
{
    [FVCustomAlertView showDefaultLoadingAlertOnView:self.view withTitle:@"加载中..."];
    JSNetWorking *network = [[JSNetWorking alloc] init];
    NSString *str = [NSString stringWithFormat:@"http://www.tanghushi.com/api/mobile/?version=2&module=medicine_project&op=myproject&ios=1&pid=%@", _project.pid];
    [network getRequestWithURLStr:str success:^(id ResultData) {
        [FVCustomAlertView hideAlertFromView:self.view fading:YES];
        NSLog(@"%@", ResultData);
        _dic = [NSDictionary dictionaryWithDictionary:ResultData];
        
        [FVCustomAlertView hideAlertFromView:self.view fading:YES];
        _headerView = [[[NSBundle mainBundle] loadNibNamed:@"MyPlanView" owner:self options:nil]lastObject];
        _headerView.dic =[[_dic objectForKey:@"Variables"] objectForKey:@"value"];
        _headerView.delegate = self;
        _headerView.isEdit = YES;
        _projectId = [[[[_dic objectForKey:@"Variables"] objectForKey:@"value"] objectForKey:@"detail"] objectForKey:@"id"];
        if (![_headerView.dic objectForKey:@"project"]) {
            DXAlertView *alertView = [[DXAlertView alloc] initWithTitle:nil contentText:@"您还没有方案，请去添加." leftButtonTitle:nil rightButtonTitle:@"返回"];
            [alertView show];
            alertView.rightBlock = ^(){
                [self.navigationController popViewControllerAnimated:YES];
            };
            return ;
        }
        _headerView.delegate = self;
        self.tableView.tableHeaderView = _headerView;
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        
    }];
}
#pragma  mark- 导入方案按钮方法
-(void)leadingProject
{
    DXAlertView *alertView = [[DXAlertView alloc] initWithTitle:nil contentText:@"确定将此方案导入成当前方案？" leftButtonTitle:@"取消" rightButtonTitle:@"确定"];
    alertView.leftBlock = ^(){
        return ;
    };
    alertView.rightBlock = ^(){
        NSString *str =[NSString stringWithFormat:@"http://www.tanghushi.com/api/mobile/?version=2&module=medicine_project&op=current&id=%@", _project.pid];
        JSNetWorking *network = [[JSNetWorking alloc] init];
        [network getRequestWithURLStr:str success:^(id ResultData) {
            NSLog(@"%@", ResultData);
            if ([[ResultData objectForKey:@"Variables"] objectForKey:@"value"]) {
                self.successBlock();
                [self.navigationController popViewControllerAnimated:YES];
                
            }
        } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
            
        }];
        
    };
    [alertView show];
    
}
-(void)valueOfSuccessBlock:(SUCCESSBLOCK)successBlock
{
    self.successBlock = successBlock;
}
