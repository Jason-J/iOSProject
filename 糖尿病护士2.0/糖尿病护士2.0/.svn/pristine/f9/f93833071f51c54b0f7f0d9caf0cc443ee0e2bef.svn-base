-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    NSLog(@"111-==-=-=-=-=%lu",(unsigned long)tableArray.count);
    return tableArray.count;
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    if (self.segmented.selectedSegmentIndex==0) {
        static NSString * ce = @"Rank";
        RankCell * cell = (RankCell *)[tableView dequeueReusableCellWithIdentifier:ce];
        if (!cell) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"RankCell" owner:self options:nil] lastObject];
        }
        cell.goldLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"credits"];
        cell.rankLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"grouptitle"];
        return cell;
    }else if (self.segmented.selectedSegmentIndex==1){
        static NSString * ce = @"Experience";
        ExperienceCell * cell = (ExperienceCell *)[tableView dequeueReusableCellWithIdentifier:ce];
        if (!cell) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"ExperienceCell" owner:self options:nil] lastObject];
        }
        cell.titleLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"rulename"];
        cell.goldLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"golds"];
        cell.rankLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"credits"];
        return cell;
    }else{
        static NSString * ce = @"Grow";
        GrowCell * cell = (GrowCell *)[tableView dequeueReusableCellWithIdentifier:ce];
        if (!cell) {
            cell = [[[NSBundle mainBundle] loadNibNamed:@"GrowCell" owner:self options:nil] lastObject];
        }
        cell.titleLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"rulename"];
        cell.goldLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"glods"];
        cell.rankLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"credits"];
        cell.timeLab.text = [[tableArray objectAtIndex:indexPath.row] objectForKey:@"dateline"];
        return cell;
    }
    
}
