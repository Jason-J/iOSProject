- (IBAction)offPushAction:(id)sender {
    UISwitch *switchButton = (UISwitch*)sender;
    BOOL isButtonOn = [switchButton isOn];
    if (isButtonOn) {
        NSLog(@"推送开%s",__func__);
        [[ UIApplication sharedApplication ] registerForRemoteNotificationTypes :( UIRemoteNotificationTypeBadge | UIRemoteNotificationTypeSound | UIRemoteNotificationTypeAlert )];
    }else {
        NSLog(@"推送关%s",__func__);
        [[UIApplication sharedApplication] unregisterForRemoteNotifications];
    }
}
- (IBAction)soundOffAction:(id)sender {
    UISwitch *switchButton = (UISwitch*)sender;
    BOOL isButtonOn = [switchButton isOn];
    if (isButtonOn) {
         AudioServicesPlaySystemSound(kSystemSoundID_Vibrate);
        NSLog(@"震动开%s",__func__);
    }else{
        AudioServicesPlaySystemSound(1007);
        NSLog(@"震动关%s",__func__);
    }
}
- (IBAction)useHelpAction:(id)sender {
}
- (IBAction)feedbackAction:(id)sender {
    UIStoryboard * feedbackSB = [UIStoryboard storyboardWithName:@"Mine" bundle:nil];
    UIViewController * feedbackVC = [feedbackSB instantiateViewControllerWithIdentifier:@"answer"];
    [self.navigationController pushViewController:feedbackVC animated:YES];
}
