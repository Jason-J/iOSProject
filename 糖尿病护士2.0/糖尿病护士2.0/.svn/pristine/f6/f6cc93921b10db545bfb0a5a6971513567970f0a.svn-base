#import <UIKit/UIKit.h>

@protocol ChatViewDelegate <NSObject>
@optional
-(void)showKeyboardWithKeyboardSize:(CGSize)size;
-(void)hidenKeyBoardWithKeyboardSize:(CGSize)size;
-(void)sendMessageWith:(NSString *)str;
-(void)startSaveVoice;
-(void)endSaveVoice;
@end
@interface ChatView : UITableViewCell<UITextViewDelegate>
@property (weak, nonatomic) IBOutlet UIButton *voiceBtn;
@property (weak, nonatomic) IBOutlet UIButton *photoBtn;
@property (weak, nonatomic) IBOutlet UIButton *pressSendBtn;
@property (nonatomic, assign) id <ChatViewDelegate> delegate;
@property (weak, nonatomic) IBOutlet UITextView *textView;
@property (nonatomic, assign) BOOL isVoice;
@property (nonatomic, assign) CGSize keyboardSize;
@property (nonatomic, strong) UIView *view;
-(void)hidenKeyboard;
@end
