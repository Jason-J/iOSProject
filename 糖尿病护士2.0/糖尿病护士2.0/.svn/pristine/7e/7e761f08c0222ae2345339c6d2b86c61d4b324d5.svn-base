//提醒方式选择按钮
- (IBAction)remindStyleBtnAction:(id)sender {
    UIActionSheet *actionSheet = [[UIActionSheet alloc] initWithTitle:@"请选择提醒方式" delegate:self cancelButtonTitle:nil destructiveButtonTitle:nil otherButtonTitles:@"短信", @"电话", nil];
    actionSheet.tag = 22222;
    [actionSheet showInView:self.view];
}



//回收键盘
-(void)touchesBegan:(NSSet *)touches withEvent:(UIEvent *)event
{
    [_realNameTextField resignFirstResponder];
    [_phoneNumberTextFied resignFirstResponder];
    [_verifyTextField resignFirstResponder];
}
-(void)actionSheet:(UIActionSheet *)actionSheet clickedButtonAtIndex:(NSInteger)buttonIndex
{
    if (actionSheet.tag == 11111) {
        switch (buttonIndex) {
            case 0:
                _familyMember.relationship = @"祖父母";
                break;
            case 1:
                _familyMember.relationship = @"父母";
                break;
             case 2:
                _familyMember.relationship = @"其他平辈";
                break;
                case 3:
                _familyMember.relationship = @"子女";
                break;
                case 4:
                _familyMember.relationship = @"孙辈";
                break;
            default:
                break;
        }
        [_relationshipLabel setText:_familyMember.relationship];
        
    } else if (actionSheet.tag == 22222) {
        if (buttonIndex == 0) {
            NSLog(@"短信");
            _familyMember.remindStyle = @"短信";
        } else {
            NSLog(@"电话");
            _familyMember.remindStyle = @"电话";
        }
        [_remindStyleLabel setText:_familyMember.remindStyle];
        
    }

}
