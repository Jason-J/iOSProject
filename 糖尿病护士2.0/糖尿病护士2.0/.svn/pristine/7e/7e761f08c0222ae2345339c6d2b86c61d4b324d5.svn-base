#pragma  mark- 倒计时方法
-(void)timeDownMeth
{
    
    _time --;
    if (_time == 0) {
        [_countDownTimer invalidate];
        _verifyBtn.hidden = NO;
        _timeLabel.hidden = YES;
    }
    _timeLabel.text = [NSString stringWithFormat:@"%ld秒后重新获取", (long)_time];
    [_timeLabel sizeToFit];
    
}
- (IBAction)verifyBtnAction:(id)sender
{
    if ( _phoneNumberTextFied.text.length != 11) {
        [FVCustomAlertView showDefaultWarningAlertOnView:self.view withTitle:@"手机号码有误"];
        [self hiddenAlertView];
        _time = 60;

    } else {
        _countDownTimer = [NSTimer scheduledTimerWithTimeInterval:1 target:self selector:@selector(timeDownMeth) userInfo:nil repeats:YES];
        _timeLabel.hidden = NO;
        _verifyBtn.hidden = YES;
        _timeLabel.alpha = 0.5;
        _time = 60;
        [self getVerifyFromServer];

    }
}
#pragma  mark- 获取验证码方法
-(void)getVerifyFromServer
{
    NSString *urlStr = [[NSString stringWithFormat:@"http://test.tanghushi.com/api/mobile/?version=2&module=verify&op=getverify&mobiles=%@&yy=0", _phoneNumberTextFied.text]stringByAddingPercentEscapesUsingEncoding:NSUTF8StringEncoding];
    NSURL *url = [NSURL URLWithString:urlStr];
    NSURLRequest *request = [NSURLRequest requestWithURL:url cachePolicy:NSURLRequestReloadIgnoringLocalCacheData timeoutInterval:20];
    AFHTTPRequestOperation *operation = [[AFHTTPRequestOperation alloc] initWithRequest:request];
    [operation setCompletionBlockWithSuccess:^(AFHTTPRequestOperation *operation, id responseObject) {
        id object = [NSJSONSerialization JSONObjectWithData:responseObject options:NSJSONReadingMutableLeaves error:nil];
        NSLog(@"%@", object);
        _verifyStr = [[object objectForKey:@"Variables"] objectForKey:@"value"];
        NSLog(@"%@", _verifyStr);
    } failure:^(AFHTTPRequestOperation *operation, NSError *error) {
        
    }];
    [operation start];
}
#pragma  mark- 警告框消失方法
-(void)hiddenAlertView
{
    [NSTimer scheduledTimerWithTimeInterval:2 target:self selector:@selector(hiddenAlertViewNow) userInfo:nil repeats:1];
}
-(void)hiddenAlertViewNow
{
    [FVCustomAlertView hideAlertFromView:self.view fading:YES];
}
