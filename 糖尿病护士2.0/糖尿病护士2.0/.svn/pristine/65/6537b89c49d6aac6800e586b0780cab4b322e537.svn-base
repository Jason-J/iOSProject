#import <UIKit/UIKit.h>


typedef void(^SELECTEDROW)(NSString *currentStr);
typedef void(^SEROW)(NSDate *date, NSString *currentStr);
@interface JSDatePickerView : UIView
+(JSDatePickerView *)datePickerViewInstance;
@property (nonatomic, strong) UIDatePicker *datePicker;
@property (nonatomic, copy) SELECTEDROW currentBlock;
@property (nonatomic, copy) SEROW dateBlock;
-(void)valueOfDate:(SEROW)dateBlock;
-(void)valueOfCurrentStr:(SELECTEDROW)block;
@property (nonatomic, copy) NSString *selectedStr;
-(void)showInView:(UIView *)view;//出现
-(void)cancleView;//消失
@end
