@interface CurrentMedicinePlanViewController ()<MyPlanViewDelegate>

@property (nonatomic, strong) NSDictionary *dic;
@property (nonatomic, strong) NSMutableArray *dataMArr;
@property (nonatomic, strong) MyPlanView *headerView;
@property (nonatomic, copy) NSString *projectId;
@end

@implementation CurrentMedicinePlanViewController

- (void)viewDidLoad {
    _dataMArr = [[NSMutableArray alloc] init];
    [super viewDidLoad];
    [self getDataFromServer];
    // Uncomment the following line to preserve selection between presentations.
    // self.clearsSelectionOnViewWillAppear = NO;
    
    // Uncomment the following line to display an Edit button in the navigation bar for this view controller.
    // self.navigationItem.rightBarButtonItem = self.editButtonItem;
   
}
-(void)getDataFromServer
{
    JSNetWorking *network = [[JSNetWorking alloc] init];
    [FVCustomAlertView showDefaultLoadingAlertOnView:self.view withTitle:@"努力加载中..."];
    [network getRequestWithURLStr:@"http://www.tanghushi.com/api/mobile/?version=2&module=medicine_project&op=myproject&ios=1" success:^(id ResultData) {
        
        _dic = [NSDictionary dictionaryWithDictionary:ResultData];

        [FVCustomAlertView hideAlertFromView:self.view fading:YES];
        _headerView = [[[NSBundle mainBundle] loadNibNamed:@"MyPlanView" owner:self options:nil]lastObject];
        _headerView.dic =[[_dic objectForKey:@"Variables"] objectForKey:@"value"];
        _headerView.delegate = self;
        _headerView.isEdit = YES;
        _projectId = [[[[_dic objectForKey:@"Variables"] objectForKey:@"value"] objectForKey:@"detail"] objectForKey:@"id"];
        if (![_headerView.dic objectForKey:@"project"]) {
            DXAlertView *alertView = [[DXAlertView alloc] initWithTitle:nil contentText:@"您还没有方案，请去添加." leftButtonTitle:nil rightButtonTitle:@"返回"];
            [alertView show];
            alertView.rightBlock = ^(){
                [self.navigationController popViewControllerAnimated:YES];
            };
            return ;
        }
        _headerView.delegate = self;
        self.tableView.tableHeaderView = _headerView;
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        
    }];
}
#pragma  mark- 将数据与接口对接
-(void)passValueWithMedicineArr:(NSMutableArray *)array andDateStr:(NSString *)dateStr andPlanName:(NSString *)planName
{
    NSMutableArray *data = [[NSMutableArray alloc] init];
    for (int i = 0 ; i < array.count; i ++) {
        Medicine *medicine = [array objectAtIndex:i];
        NSDictionary *tempDic = @{@"medicine":medicine.auto_id, @"num":medicine.dose, @"diet_time":medicine.useMedicineTime};
        [data addObject:tempDic];
    }
    if ([NSJSONSerialization isValidJSONObject:data]) {
        NSError * error;
        NSData * jsonData = [NSJSONSerialization dataWithJSONObject:data options:NSJSONWritingPrettyPrinted error:
                             &error];
        NSString *jsonString = [[NSString alloc] initWithData:jsonData encoding:NSUTF8StringEncoding];
        
        NSDictionary *dic = [NSDictionary dictionaryWithObjectsAndKeys:planName , @"name", dateStr,@"starttime", jsonString, @"data",_projectId, @"pid", nil];
        NSDictionary *noDic = [NSDictionary dictionaryWithObjectsAndKeys:planName , @"name", dateStr,@"starttime", data, @"data",_projectId, @"pid", nil];
        [self sendToServerWithPostData:dic andNoJsonDic:noDic];
    }
}
#pragma  mark- 上传服务器
- (void)sendToServerWithPostData:(NSDictionary *)dic andNoJsonDic:(NSDictionary *)noDic
{
    JSNetWorking *netWork = [[JSNetWorking alloc] init];
    [netWork postRequestWithURLStr:@"http://www.tanghushi.com/api/mobile/?version=2&module=medicine_project&op=editproject" paramters:dic success:^(id ResultData) {
        NSLog(@"%@", ResultData);
        if ([[ResultData objectForKey:@"Variables"] objectForKey:@"value"]) {
            if (_successBlock) {
                _successBlock();
            }
            [self.navigationController popViewControllerAnimated:YES];
        }
        
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        
    }];
}
-(void)valueOfSuccessBlock:(SUCCESSBLOCK)successBlock
{
    self.successBlock = successBlock;
}
- (IBAction)editBtnAction:(UIButton *)sender {

    if ([sender.titleLabel.text isEqualToString:@"编辑"]) {
        [sender setTitle:@"完成" forState:UIControlStateNormal];
        _headerView.isEditBtn = sender;
    }else {
        _headerView.isEditBtn = sender;
        
        [sender setTitle:@"编辑" forState:UIControlStateNormal];
    }
//          self.tableView.tableHeaderView = _headerView;
}

