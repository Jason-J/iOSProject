#import "SubjectsListViewController.h"
#import "CellForSubjectsList.h"
#import "Subjects.h"
#import "SubjectsDetailsViewController.h"
@interface SubjectsListViewController ()<UITableViewDataSource,UITableViewDelegate>{
    NSMutableArray * _tableArray;
}
@property (weak, nonatomic) IBOutlet UITableView *tableView;

@end

@implementation SubjectsListViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    _tableArray = [[NSMutableArray alloc] init];
    self.tableView.rowHeight = 110;
    self.tableView.delegate = self;
    self.tableView.dataSource  =self;
    [self getSubjectsListRequest];
}
#pragma mark - request
-(void)getSubjectsListRequest{
    JSNetWorking * js = [[JSNetWorking alloc] init];
    NSString * url = [NSString stringWithFormat:@"http://test.tanghushi.com/api/mobile/?version=2&module=wiki&catid=%@&p=1",self.catid];
    [js getRequestWithURLStr:url success:^(id ResultData) {
        id value = [[ResultData objectForKey:@"Variables"] objectForKey:@"value"];
        [_tableArray removeAllObjects];
        for (NSDictionary * dic in value) {
            Subjects * subject = [[Subjects alloc] init];
            [subject setValuesForKeysWithDictionary:dic];
            [_tableArray addObject:subject];
        }
        [self.tableView reloadData];
    } failure:^(NSError *error, AFHTTPRequestOperation *operation) {
        NSLog(@"error = %@",error);
    }];
}
-(UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    static NSString * ce = @"subjectlistcell";
    CellForSubjectsList * cell = (CellForSubjectsList *)[tableView dequeueReusableCellWithIdentifier:ce];
    if (!cell) {
        cell = [[[NSBundle mainBundle] loadNibNamed:@"CellForSubjectsList" owner:self options:nil] lastObject];
    }
    [cell configureForSubjectsList:[_tableArray objectAtIndex:indexPath.row]];
    
    return cell;
}
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{
    return _tableArray.count;
}
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath{
    SubjectsDetailsViewController * subjectsDetailsVC = [[SubjectsDetailsViewController alloc] init];
    Subjects * subject = [_tableArray objectAtIndex:indexPath.row];
    subjectsDetailsVC.aaid = subject.aid;
    [self.navigationController pushViewController:subjectsDetailsVC animated:YES];
}
- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

